<div class="main user-show">
  <div class="container">
    <div class="user">
      <%= image_tag "/user_images/#{@user.image}" %>
      <!-- 次の行に、ユーザー名を出力するコードを記述しましょう。 -->
      <h2><%= @user.name %></h2>
      <!-- 次の行に、ユーザーのメールアドレスを出力するコードを記述しましょう。 -->
      <p><%= @user.email %></p>
       <!-- 次の行のコードを編集してリンクを完成させましょう -->
       <% if @user.id == @current_user.id %>
        <%= link_to "ユーザー情報を編集する", edit_user_path(@user), class: "user_edit_button" %>
       <% end %>
    </div>
    <% @user.posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to post.user.name, user_path(post.user.id) %>
          </div>
          <%= link_to post.content, post_path(post.id) %>
        </div>
      </div>
    <% end %>
  </div>
</div>