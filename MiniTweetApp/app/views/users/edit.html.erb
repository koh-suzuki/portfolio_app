<div class="main users-edit">
  <div class="container">
    <div class="form-heading">ユーザーの編集</div>
    <div class="form users-form">
      <div class="form-body">
        <!-- 次の行からform_tagを使い、編集内容を送信できるようにしましょう(endの忘れに注意です) -->
        <%= form_tag user_path, method: :patch, multipart: true do %> 
        <% @user.errors.full_messages.each do |msg| %>
          <div class="form-error">
            <%= msg %>
          </div>
        <% end %>
        <p>ユーザー名</p>
        <!-- 次の行にnameカラムを初期値として表示する記述をしましょう -->
        <input name = "name" value="<%= @user.name %>">
        <p>メールアドレス</p>
        <!-- 次の行にemailカラムを初期値として表示する記述をしましょう -->
        <input name="email" value="<%= @user.email %>">
        <p>プロフィール画像</p>
        <input name="image" type="file">
        <input type="submit" value="保存">
        <% end %>
      </div>
    </div>
  </div>
</div>